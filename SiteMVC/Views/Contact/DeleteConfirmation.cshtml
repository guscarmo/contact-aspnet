@model ContactModel
@{
    ViewData["Title"] = "Confirmação apagar contato";
}

<div class="text-center">
    <h3>Deseja apagar o contato @Model.Nome?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-secondary" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>
    <a class="btn btn-primary" role="button" asp-controller="Contact" asp-route-id="@Model.Id" asp-action="Delete">Confirmar</a>
</div>