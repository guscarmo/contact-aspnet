@model UserModel
@{
    ViewData["Title"] = "Confirmação apagar usuário";
}

<div class="text-center">
    <h3>Deseja apagar o usuário @Model.Name?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-secondary" role="button" asp-controller="User" asp-action="Index">Cancelar</a>
    <a class="btn btn-primary" role="button" asp-controller="User" asp-route-id="@Model.Id" asp-action="Delete">Confirmar</a>
</div>